<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>
    <div class="container">
        <form action="/index/<%= index %>?_method=PUT" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="scientist-name" class="form-control" value="<%= scientist.name %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" class="form-control"><%= scientist.description %></textarea> 
            </div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </form>
    </div>
</body>

</html>
